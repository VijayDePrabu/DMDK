<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/app_bg"
    tools:context="com.de.dmdk.MenuScreenActivity">

    <ImageView
        android:id="@+id/appLogo"
        android:src="@drawable/splash_core_image"
        android:layout_width="@dimen/screen_app_logo_size"
        android:layout_height="@dimen/screen_app_logo_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_gravity="center_horizontal" />
    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBaggyGreen"
        android:id="@+id/btnNewRegister"
        android:text="New Membership Entry"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appLogo"
        android:layout_marginTop="30dp"
    />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBaggyGreen"
        android:text="Functionality 2"
        android:id="@+id/button2"
        android:layout_below="@+id/btnNewRegister"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBaggyGreen"
        android:text="Functionality 3"
        android:id="@+id/button3"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBaggyGreen"
        android:text="Functionality 4"
        android:id="@+id/button4"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
