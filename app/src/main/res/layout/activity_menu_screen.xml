<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background_image"
    tools:context="com.de.dmdk.MenuScreenActivity"
    >

    <ImageView
        android:id="@+id/appLogo"
        android:src="@drawable/splash_core_image"
        android:layout_width="@dimen/screen_app_logo_size"
        android:layout_height="@dimen/screen_app_logo_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/newreg"
        android:id="@+id/btnNewRegister"
        android:text="New Membership Entry"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appLogo"
        android:layout_marginTop="10dp"
    />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/recent"
        android:text="Recent Registrations"
        android:id="@+id/btnRecentRegister"
        android:layout_below="@+id/btnNewRegister"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/updaterec"
        android:text="Update Records"
        android:id="@+id/btnUpdateRecords"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/btnRecentRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/printrec"
        android:text="Print"
        android:id="@+id/btnPrint"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/btnUpdateRecords"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/printrec"
        android:text="Reports"
        android:id="@+id/btnReports"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/btnPrint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorBaggyGreen"
        android:text="Settings"
        android:id="@+id/button6"
        android:visibility="gone"
        android:layout_alignLeft="@+id/btnNewRegister"
        android:layout_alignRight="@+id/btnNewRegister"
        android:layout_below="@+id/btnReports"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
